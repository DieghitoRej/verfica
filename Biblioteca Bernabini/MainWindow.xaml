<Window x:Class="Biblioteca_Bernabini.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteca_Bernabini"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="BtnAggiungiLibro" Content="Button" HorizontalAlignment="Left" Margin="49,76,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="BtnRicercaLibro" Content="Button" HorizontalAlignment="Left" Margin="49,242,0,0" VerticalAlignment="Top" Click="BtnRicercaLibro_Click"/>
        <Button x:Name="BtnRicercaAutore" Content="Button" HorizontalAlignment="Left" Margin="509,76,0,0" VerticalAlignment="Top" Click="BtnRicercaAutore_Click"/>
        <Button x:Name="BtnContaLibri" Content="Button" HorizontalAlignment="Left" Margin="509,242,0,0" VerticalAlignment="Top" Click="BtnContaLibri_Click"/>
        <TextBox x:Name="TxtAggiungi" HorizontalAlignment="Left" Margin="153,76,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.543,-1.414"/>
        <TextBox x:Name="TxtRicerca" HorizontalAlignment="Left" Margin="608,78,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtAutore" HorizontalAlignment="Left" Margin="153,242,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="BlkNumero" HorizontalAlignment="Left" Margin="504,295,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
